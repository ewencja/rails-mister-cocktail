<p id="notice"><%= notice %></p>

<div class="container">
  <h1 class="text-center">Welcome to the Cocktails Menu</h1>
    <div class="container">
      <div class="row">
        <div class="col-xs-4">
          Name
        </div>
        <div class="col-xs-4">
          Ingredients
        </div>
        <div class="col-xs-4">
          Actions
        </div>
      </div>
    </div>

    <div class="container">
      <% @cocktails.each do |cocktail| %>
      <div class="row">
        <div class="col-xs-4">
          <% unless cocktail.photo.url(:thumbnail).nil? %>
          <td><%= image_tag cocktail.photo.url(:thumbnail) %></td>
          <% end %>
          <%= cocktail.name %>
        </div>
        <div class="col-xs-4">
          <%= render 'cocktails/doses', cocktail: cocktail %>
        </div>
        <div class="col-xs-4">
          <td><%= link_to 'Show', cocktail %></td>
          <td><%= link_to 'Edit', edit_cocktail_path(cocktail) %></td>
          <td><%= link_to 'Destroy', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </div>
      </div>
      <% end %>
    </div>
    <br>
    <%= link_to 'Add new cocktail', new_cocktail_path %>
</div>


